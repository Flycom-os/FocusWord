{
  "compilerOptions": {
    "target": "ES6",                        // Устанавливает целевой уровень JavaScript
    "module": "ESNext",                     // Использует ESNext модули
    "moduleResolution": "node",             // Для использования модульной системы Node.js
    "strict": true,                         // Включает строгий режим проверки типов
    "esModuleInterop": true,                // Разрешает использование импорта через `default`
    "allowSyntheticDefaultImports": true,   // Разрешает использование default импорта в случаях, когда его нет
    "skipLibCheck": true,                   // Пропускает проверку типов в библиотеках
    "forceConsistentCasingInFileNames": true, // Обеспечивает согласованность регистра имен файлов
    "jsx": "react-jsx",                     // Настройка JSX для использования с React 17+
    "noImplicitAny": true,                  // Не разрешает неявное использование типа `any`
    "noUnusedLocals": true,                 // Предупреждает об неиспользуемых локальных переменных
    "noUnusedParameters": true,             // Предупреждает о неиспользуемых параметрах функций
    "resolveJsonModule": true,              // Разрешает импорт JSON файлов
    "isolatedModules": true,                // Включает поддержку изолированных модулей
    "incremental": true,                    // Включает инкрементальную компиляцию для ускорения сборки
    "skipDefaultLibCheck": true,            // Пропускает проверку типов для стандартной библиотеки
    "lib": ["dom", "esnext"],               // Добавляет поддержку типов для браузерных API и новых функций ECMAScript
    "baseUrl": "./src",                     // Определяет базовый каталог для разрешения модулей
    "paths": {
      "@/*": ["src/*"]                      // Настройка алиасов для удобства импорта
    }
  },
  "include": [
    "src/**/*"                              // Указывает папку и файлы, которые следует компилировать
  ],
  "exclude": [
    "node_modules",                         // Исключает папку с зависимостями
    "build"                                 // Исключает папку сборки
  ]
}
